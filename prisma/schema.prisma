generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// setting the user model
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // user table relations
  movies         Movie[]         @relation("MovieCreator")
  watchListItems watchListItem[]
}

// movie model types
model Movie {
  id          String   @id @default(uuid())
  title       String
  duration    Int
  description String?
  releaseDate DateTime @default(now())
  genres      String[] @default([])
  runtime     Int?
  posterUrl   String?
  createdBy   String
  createdAt   DateTime @default(now())

  createdByUser  User            @relation("MovieCreator", fields: [createdBy], references: [id], onDelete: Cascade, onUpdate: Cascade)
  watchListItems watchListItem[]

  // movie table relations
}

model watchListItem {
  id        String          @id @default(uuid())
  userId    String
  movieId   String
  status    WatchListStatus @default(PLANNED)
  rating    Int?
  notes     String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @default(now()) @updatedAt

  // table relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

enum WatchListStatus {
  PLANNED
  WATCHING
  COMPLETED
  DROPPED
}
